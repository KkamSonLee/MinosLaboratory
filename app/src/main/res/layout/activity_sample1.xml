<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="sampleAcViewModel"
            type="com.angdroid.minoslaboratory.presentation.main.vm.SampleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.main.component.Sample1Activity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fc_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_add_sample1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_add_sample1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample1 Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_add_sample2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample2 Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>